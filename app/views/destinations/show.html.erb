          </dd>
        </div>

        <div class="destination__row">
          <dt class="destination__dt">
            <%= @destination.via1 %>
          </dt>
          <dd class="destination__dd">
          <% if @destination.url1.present? %>
            <%= link_to @destination.url1, @destination.url1, target: :_blank, rel: "noopener noreferrer" %>
          <% end %>
          </dd>
        </div>

