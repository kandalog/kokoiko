<div class="inner sign__up-inner">

  
    <h2 class="util__head sign__up-head">新規登録フォーム</h2>

    <div class="sign__up-form">
    <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>

      <div class="contact__form-row">
        <%= f.label :名前 %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="contact__form-row">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    
      <div class="contact__form-row">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="contact__form-row">
        <%= f.label :パスワード確認 %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
      </div>
    
      <div class="sing_up-form-button">
        <%= f.submit "登録する"%>
      </div>
    
    <% end %>
  </div>

</div>